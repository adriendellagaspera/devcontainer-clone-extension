{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clone Repository in Container",
            "type": "shell",
            "command": "clone-in-container.sh",
            "args": ["${input:repositoryUrl}"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Clone un dépôt GitHub directement dans un dev container"
        }
    ],
    "inputs": [
        {
            "id": "repositoryUrl",
            "description": "URL du dépôt GitHub à cloner",
            "default": "https://github.com/",
            "type": "promptString"
        }
    ]
}
